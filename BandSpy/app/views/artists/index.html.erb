<p id="notice"><%= notice %></p>

<h2>Welcome, <%=current_user.name%>!</h2>

<h1>Listing Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>On tour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.on_tour %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Check out these upcoming events in <%=current_user.city%>:</h3>


<br>
<ul>
  <% @events.map do |event| %>
    <li><%= event %></li>
  <% end %>
</ul>


<br>

<%= link_to 'New Artist', new_artist_path %>






